<%# repeat code starts %>
<li class="d-flex justify-content-between align-items-center mobile-navigation-list-item">
  <%= link_to current_level.name, seo_url(current_level), class: 'w-75' %>

  <% if current_level.children.size > 0 %>
    <a class="w-25 text-right mobile-navigation-category-link" data-category="<%= current_level.name.parameterize %>" href="#" aria-label="<%= Spree.t('go_to_category')%>">
      <%= icon(name: 'arrow-right',
               classes: 'd-sm-none spree-icon-arrow spree-icon-arrow-right',
               width: 16,
               height: 16) %>
      <%= icon(name: 'arrow-right',
               classes: 'd-none d-sm-inline spree-icon-arrow spree-icon-arrow-right',
               width: 14,
               height: 27) %>
    </a>
  <% end %>

  <ul class="list-unstyled position-absolute mobile-navigation-sublist" data-category="<%= current_level.name.parameterize %>">
    <% if current_level.children.size > 0 %>
      <li class="text-center font-weight-bold mobile-navigation-sublist-header">
        <%= current_level.name %>
      </li>
      <% current_level.children.each do |next_level| %>
        <%= render 'spree/shared/custom_mobile_nested_submenu', current_level: next_level %>
      <% end %>
    <% else %>
      <li class="d-flex justify-content-between align-items-center mobile-navigation-list-item">
        <%= link_to current_level.name, seo_url(current_level), class: 'w-75' %>
      </li>
    <% end %>
  </ul>
</li>
<%# repeat code ends %>